#!/usr/bin/env perl
use strict;
use warnings FATAL => 'all';

use File::Basename;
use Cwd qw(abs_path);

my $apicast = $ENV{APICAST_DIR} || abs_path(dirname(abs_path(__FILE__)) . '/..');
my $bindir = $apicast . '/bin';
my $lua_path = $ENV{LUA_PATH} || ';';

chdir $apicast;

$ENV{LUA_PATH} = "$apicast/src/?.lua;${lua_path}";

exec '/usr/bin/env', 'resty',
    "$bindir/cli", @ARGV;
